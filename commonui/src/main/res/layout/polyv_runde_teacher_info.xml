<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/runde_teacher_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginBottom="@dimen/dm_18"
        android:layout_marginTop="@dimen/dm_18"
        android:ellipsize="end"
        android:maxLength="10"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="教师名字" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dm_15"
        android:id="@+id/teacher_info_middle_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:visibility="gone"
            android:id="@+id/teacher_name_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dm_5"
            android:layout_marginTop="@dimen/dm_5"
            android:ellipsize="end"
            android:maxLength="10"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="教师名字" />
        <TextView
            android:id="@+id/online_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="13sp"
            android:text="10000人在看" />
    </LinearLayout>


    <FrameLayout
        android:layout_marginRight="@dimen/dm_15"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/gift_send"
            android:textColor="#FF8C00"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"

            android:background="@drawable/polyv_gift_send_bg"
            android:drawableLeft="@drawable/gift_send"
            android:drawablePadding="@dimen/dm_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dm_10"
            android:paddingRight="@dimen/dm_10"
            android:textSize="15sp"
            android:text="送礼物" />
        <TextView
            android:textSize="8sp"
            android:paddingLeft="@dimen/dm_5"
            android:paddingRight="@dimen/dm_5"
            android:gravity="center"
            android:layout_gravity="center_vertical|right"
            android:layout_marginBottom="@dimen/dm_18"
            android:layout_alignRight="@id/gift_send"
            android:background="@drawable/teacher_gift_number_bg"
            android:text="3254"
            android:id="@+id/gift_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </FrameLayout>

</LinearLayout>